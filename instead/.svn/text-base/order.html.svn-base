<!DOCTYPE html>
<html>

	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
		<title></title>
		<script src="../js/rem.js" type="text/javascript" charset="utf-8"></script>
		<link rel="stylesheet" type="text/css" href="../css/mui.min.css" />
		<link rel="stylesheet" type="text/css" href="../css/reset.css" />
		<link rel="stylesheet" type="text/css" href="../css/main.css" />
		<script src="../js/mui.min.js" type="text/javascript" charset="utf-8"></script>
		<script src="https://cdn.bootcss.com/vue/2.5.9/vue.min.js"></script>
		<script src="http://static.runoob.com/assets/jquery-validation-1.14.0/lib/jquery.js"></script>
	</head>

	<body>
		<div id="app" class="wrapper myorder">
			<div class="layui" v-show="layui">
				<div class="layui-inner">
					<div class="layui-top">
						友情提示
					</div>
					<div class="layui-main">
						{{layuitext}}
					</div>
					<div class="layui-settings">
						<div class="layui-setting" @click="layuitrue">
							确定
						</div>
						<div class="layui-setting" @click="layuiboo">
							取消
						</div>
					</div>
				</div>
			</div>
			<header class="header">
				<span class="header-back mui-action-back">
						<img src="../img/back.png"/>
					</span>
				<span class="header-main">我的订单</span>
				<span class="header-settings"></span>
			</header>
			<div class="main">
				<div class="list-group" @click="opennew('orderdetail',val.usReplaceTakeId)" v-for="val in mydata">
					<div class="list-top">
						<div class="list-title">
							{{val.usRtDescribe}}
						</div>
						<div class="list-state">
							{{val.usRtStatus | state}}
						</div>
					</div>
					<div class="adress-group" style="height: .7rem;">
						<span class="fhuo"></span>
						<div class="adress-text">
							{{val.usRtProvince}}{{val.usRtCity}}{{val.usRtArea}}{{val.usRtDetails}}
						</div>
					</div>
					<div class="adress-group" style="height: .7rem;">
						<span class="shuo"></span>
						<div class="adress-text">
							{{val.usAdsProvince}}{{val.usAdsCity}}{{val.usAdsArea}}{{val.usAdsDetailed}}
						</div>
					</div>
					<div class="list-top list-bottom">
						<div class="list-data">
							{{val.usRtCreateTime1}}
						</div>
						<div class="list-setting" @click.stop="layuiboo('确认取消订单吗？',val.usReplaceTakeId)" v-if="val.state==2">
							取消订单
						</div>
					</div>
				</div>
			</div>
		</div>
		<script type="text/javascript">
			var myvue = new Vue({
				el: '#app',
				data: {
					layui: false,
					layuitext: '错误',
					mydata:[],
					usReplaceTakeId:''
				},
				methods: {
					layuitrue:function(){
						function plusReady() {
							// 弹出系统等待对话框
							plus.nativeUI.showWaiting('订单取消中')
						}
						if(window.plus) {
							plusReady();
						} else {
							document.addEventListener("plusready", plusReady, false);
						}
						var that = this
						$.ajax({
							type: "post",
							url: localStorage.getItem('myurl') + "/addReplaceOrder",
							dataType: 'json',
							data: {
								usReplaceTakeId: that.usReplaceTakeId
							},
							success: function(res) {
								console.log(res)
								that.myajax()
								function plusReady() {
									// 弹出系统等待对话框
									plus.nativeUI.closeWaiting()
								}
								if(window.plus) {
									plusReady();
								} else {
									document.addEventListener("plusready", plusReady, false);
								}
							}
						});
					},
					layuiboo: function(text,id) {
						this.layuitext = text
						this.usReplaceTakeId=id
						this.layui = !this.layui
					},
					opennew: function(id, index) {
						localStorage.setItem('usReplaceTakeId', index)
						mui.openWindow({
							url: '' + id + '.html',
							id: id
						})
					},
					myajax:function(){
						function plusReady() {
							// 弹出系统等待对话框
							plus.nativeUI.showWaiting('加载中')
						}
						if(window.plus) {
							plusReady();
						} else {
							document.addEventListener("plusready", plusReady, false);
						}
						var that = this
						$.ajax({
							type: "get",
							url: localStorage.getItem('myurl') + "/queryUsReplaceTakePojo",
							dataType: 'json',
							data: {
								usUserId: localStorage.getItem('userid')
							},
							success: function(res) {
								console.log(res)
								that.mydata = res.data
							}
						});
						function plusReady() {
									// 弹出系统等待对话框
									plus.nativeUI.closeWaiting()
								}
								if(window.plus) {
									plusReady();
								} else {
									document.addEventListener("plusready", plusReady, false);
								}
					}
				},
				mounted: function() {
					this.myajax()
				},
				filters:{
					state:function(value){
						if (value==1) {
							return '订单已完成'
						} else if(value==2){
							return '等待接单中'
						}else if(value==3){
							return '骑手已结单'
						}else{
							return '骑手已取件'
						}
					}
				}
			})
		</script>
	</body>

</html>